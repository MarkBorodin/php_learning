{% extends 'admin/adminbase.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 text-center mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row no-gutters justify-content-center mt-3">
            <div class="col-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                <h2>Posts list</h2>
                <ul>
                    {% for post_item in post %}
                        <li>
                            {{ post_item.title }}
                            <a href="{{ path('admin_post_update', {'id': post_item.id}) }}" class="btn-link">
                                Update
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                {% if check_category %}
                    <a href="{{ path('admin_post_create') }}" class="btn btn-success">Create post</a>
                {% else %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <h3>first create at least one category</h3>
                    <hr>
                    <a href="{{ path('admin_category_create') }}">Create category</a>
                </div>
            {% endif %}
            </div>
        </div>
    </div>


{% endblock %}